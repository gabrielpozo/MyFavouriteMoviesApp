<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/permissions_fragment">

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="com.light.finder.ui.camera.PermissionsFragment"
        android:label="PermissionsFragment">

        <action
            android:id="@+id/action_permissions_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/camera_fragment"
        android:name="com.light.finder.ui.camera.CameraFragment"
        android:label="CameraFragment">

        <action
            android:id="@+id/action_camera_to_gallery"
            app:destination="@id/preview_fragment" />

        <action
            android:id="@+id/action_camera_to_permissions"
            app:destination="@id/permissions_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/preview_fragment"
        android:name="com.light.finder.ui.camera.PreviewFragment"
        android:label="PreviewFragment">
        <argument
            android:name="root_directory"
            app:argType="string" />
        <action
            android:id="@+id/action_preview_fragment_to_categoriesFragment"
            app:destination="@id/categoriesFragment" />
    </fragment>


    <!-- todo -->

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.light.finder.ui.lightfinder.CategoriesFragment"
        android:label="CategoriesFragment">
        <action
            android:id="@+id/action_categoriesFragment_to_productsFragment"
            app:destination="@id/productsFragment" />
        <action
            android:id="@+id/action_categoriesFragment_to_camera_fragment2"
            app:destination="@id/camera_fragment" />
    </fragment>


    <fragment
        android:id="@+id/productsFragment"
        android:name="com.light.finder.ui.lightfinder.ProductsFragment"
        android:label="ProductsFragment" >
        <action
            android:id="@+id/action_productsFragment_to_categoriesFragment2"
            app:destination="@id/categoriesFragment" />
    </fragment>


    <fragment
        android:id="@+id/cartFragment"
        android:name="com.light.finder.ui.cart.CartFragment"
        android:label="CartFragment" />


    <fragment
        android:id="@+id/expertFragment"
        android:name="com.light.finder.ui.expert.ExpertFragment"
        android:label="ExpertFragment" />

</navigation>