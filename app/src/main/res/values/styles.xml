<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <!-- LightFinder -->
    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="SubtitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primarySubText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/book</item>
        <item name="android:lineSpacingExtra">10dp</item>
    </style>

    <style name="ActiveText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="GreenButton" parent="Theme.AppCompat">
        <item name="android:height">30dp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/darkBackgroundColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

</resources>
