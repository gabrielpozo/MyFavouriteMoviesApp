<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/browse_background_gradient">


    <TextView
        android:fontFamily="@font/bold"
        android:textColor="@color/backgroundLight"
        android:textSize="40sp"
        android:id="@+id/textBrowseFittingTitle"
        android:text="@string/which_fitting_do_you_need"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/bottomSheetLayoutBrowse"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background">

            <TextView
                android:id="@+id/textViewFittingTitle"
                style="@style/TitleTextBrowse"
                android:layout_margin="24dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fitting" />


            <!-- should have 3 items per rows -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFitting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_browse_fitting"/>

            <include
                android:id="@+id/browseError"
                layout="@layout/layout_browse_error"
                android:visibility="gone" />

            <include
                android:id="@+id/browseLoading"
                layout="@layout/layout_browse_loading"
                android:visibility="gone" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>