<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundLight"
    android:layout_margin="24dp"
    app:cardElevation="9dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="500dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageViewTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/category_placeholder" />

        <TextView
            android:id="@+id/textViewTipsTitle"
            style="@style/InactiveTextDarkBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/how_to_hold"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            />

        <TextView
            android:id="@+id/textViewTipsSubTitle"
            style="@style/InactiveTextDarkSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp"
            android:text="@string/hold_light"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>