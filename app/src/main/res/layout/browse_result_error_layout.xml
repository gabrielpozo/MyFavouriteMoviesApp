<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/browse_header_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Divider View-->
    <View
        android:id="@+id/error_divider"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/backgroundDarkPressed"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <!--Header View-->
    <include
        android:id="@+id/results_header"
        layout="@layout/browse_results_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_divider" />

    <TextView
        android:id="@+id/textViewNoResultSubTitle"
        style="@style/NoResultSubTitle"
        android:visibility="visible"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/browse_header_margin"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/no_results"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/results_header" />

    <TextView
        android:id="@+id/textViewNoResultTitle"
        style="@style/NoResultTitle"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="@string/no_result_sub"
        android:gravity="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNoResultSubTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>