<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_curvy_top_browse_filter"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/filter_title"
        android:textAlignment="center"
        android:text="Filters"
        android:textSize="18sp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/bold"
        android:textColor="@color/backgroundDark"
        android:lineSpacingExtra="12sp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <view
        android:id="@+id/title_seperator"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/filter_title"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/informationError"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/sort_title"
        app:layout_constraintTop_toBottomOf="@+id/title_seperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/backgroundDark"
        android:lineSpacingExtra="10sp"
        android:text="Sort by"
        android:layout_marginStart="24dp"
        android:layout_marginTop="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/bold" />

    <RadioGroup
        android:id="@+id/sort_by_radiogroup"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/sort_title"
        android:layout_width="match_parent"
        android:layout_marginStart="24dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <RadioButton android:id="@+id/radio_1"
            android:layoutDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/book"
            android:textColor="@color/textDark"
            android:lineSpacingExtra="8sp"
            android:text="Recommended"
            />

        <RadioButton android:id="@+id/radio_2"
            android:layoutDirection="rtl"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/book"
            android:textColor="@color/textDark"
            android:lineSpacingExtra="8sp"
            android:text="Price low - High"
            />

        <RadioButton android:id="@+id/radio_3"
            android:layoutDirection="rtl"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/book"
            android:textColor="@color/textDark"
            android:lineSpacingExtra="8sp"
            android:text="Price High - Low"
            />
    </RadioGroup>

    <view
        android:id="@+id/sort_seperator"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/sort_by_radiogroup"
        android:layout_width="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/informationError"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/temperature_title"
        app:layout_constraintTop_toBottomOf="@+id/sort_seperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/backgroundDark"
        android:lineSpacingExtra="10sp"
        android:text="Color temperature"
        android:layout_marginStart="24dp"
        android:layout_marginTop="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/bold" />

    <LinearLayout
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/temperature_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content">

        <CheckBox android:id="@+id/checkbox_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="24dp"
            android:drawableEnd="@drawable/ic_warm"
            android:text="Warm" />

        <CheckBox android:id="@+id/checkbox_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_warm_white"
            android:drawablePadding="24dp"
            android:text="Warm white" />

        <CheckBox android:id="@+id/checkbox_3"
            android:layout_width="match_parent"
            android:drawablePadding="24dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_soft_white"
            android:text="Soft white" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>