<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_big"
    android:layout_marginStart="@dimen/margin_big"
    android:layout_marginBottom="@dimen/margin_big"
    android:focusableInTouchMode="false"
    app:cardBackgroundColor="@color/backgroundLight"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/priceButton"
            style="@style/PriceButton"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:clickable="false"
            android:focusable="false"
            android:background="@drawable/button_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="@string/_0_00_0_00_each"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/category_title"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/textDark"
            android:lineSpacingExtra="2sp"
            android:text="LED Non-Dimmable"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/priceButton" />
        <TextView
            android:id="@+id/category_description"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/textDark"
            android:lineSpacingExtra="6sp"
            android:layout_marginEnd="8dp"
            android:text="Everyday value everywhere in your home. These Philips LED light bulbs provide a Soft White or Daylight."
            app:layout_constraintEnd_toStartOf="@+id/category_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_title" />
        <ImageView
            android:id="@+id/category_image"
            android:layout_width="96dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/category_placeholder"
            android:layout_height="96dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_title" />
        <Button
            android:layout_marginTop="22dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="134dp"
            android:layout_height="32dp"
            android:textSize="12sp"
            android:textColor="@color/gallerySelected"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="18sp"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:background="@drawable/category_outline"
            android:text="@string/select_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>