<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="1dp"
    android:background="@color/backgroundLight"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        android:layout_height="0dp"/>

    <ImageView
        app:layout_constraintBottom_toTopOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/no_internet_icon"
        android:layout_marginBottom="38dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title"
        android:text="@string/oops"
        android:textSize="21sp"
        style="@style/TitleTextTermsBold"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/message"
        style="@style/TextNoInternetCart"
        android:lineSpacingExtra="5sp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:text="@string/text_no_internet_connection_cart"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>
    
    <Button
        android:id="@+id/retry_internet"
        app:layout_constraintTop_toBottomOf="@+id/message"
        style="@style/GreenButton"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_curvy_corners"
        android:text="@string/try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>