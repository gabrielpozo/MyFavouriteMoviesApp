<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginEnd="32dp"
    android:layout_marginStart="12dp"
    android:layout_width="wrap_content"
    android:layout_height="160dp">

    <com.light.finder.ui.common.CircleImageView
        android:id="@+id/imageFilterCover"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center|top"
        app:layout_constraintBottom_toTopOf="@id/variation_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228" />

    <View
        android:id="@+id/gradientView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="28dp"
        android:layout_margin="8dp"
        android:layout_gravity="center|top"
        android:background="@drawable/image_gradient"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/variation_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228" />

    <TextView
        android:id="@+id/variation_name"
        style="@style/InactiveTextDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="Variant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageFilterCover" />



</androidx.constraintlayout.widget.ConstraintLayout>