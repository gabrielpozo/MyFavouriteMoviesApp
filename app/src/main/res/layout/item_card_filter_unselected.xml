<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:background="@drawable/card_filter_unselected"
    android:layout_width="160dp"
    android:layout_height="180dp">

    <com.light.finder.ui.common.CircleImageView
        android:id="@+id/imageFilterCover"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_gravity="center|top"
        android:background="@drawable/category_placeholder" />

    <TextView
        android:id="@+id/variation_name"
        style="@style/InactiveTextDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:text="Variant" />

</LinearLayout>